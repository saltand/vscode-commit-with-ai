{
  "publisher": "saltand",
  "name": "commitgen",
  "displayName": "Yet Another Commit Gen",
  "version": "1.0.3",
  "private": false,
  "packageManager": "pnpm@10.4.1",
  "description": "Generate commit messages from staged changes using AI",
  "author": "saltand <u6a69a9@outlook.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/commitgen#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/saltand/commitgen"
  },
  "bugs": {
    "url": "https://github.com/saltand/commitgen/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/antfu"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "openai",
    "gpt"
  ],
  "categories": [
    "SCM Providers",
    "Machine Learning"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.99.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "commitgen.generate",
        "title": "Generate Commit Message",
        "icon": "$(sparkle)",
        "category": "CommitGen"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commitgen.generate",
          "when": "scmProvider == git",
          "group": "navigation",
          "enablement": "!commitgen.isGenerating"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "CommitGen",
      "properties": {
        "commitgen.aiBaseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "AI service base URL (OpenAI-compatible)",
          "order": 1
        },
        "commitgen.aiModel": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "AI model name",
          "order": 2
        },
        "commitgen.aiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for AI service",
          "order": 3
        },
        "commitgen.prompt": {
          "type": "string",
          "default": "You are a helpful assistant that generates git commit messages.\n\nAnalyze the recent commit history to understand the project's commit style, language preference, and conventions. Then generate a new commit message that matches this style.\n\nRecent commit messages (for style reference):\n{{history}}\n\nStaged files:\n{{files}}\n\nStaged diff:\n{{diff}}\n\nRules:\n1. Match the language used in recent commits (English, Chinese, etc.)\n2. Follow the same commit message format and style as the history\n3. Keep the first line concise (max 72 chars)\n4. If history uses Conventional Commits (feat/fix/etc.), follow that format\n5. Be concise and focus on WHAT changed and WHY\n\nGenerate the commit message:",
          "editPresentation": "multilineText",
          "description": "Prompt template. Use {{files}} for staged file list, {{diff}} for staged diff content, and {{history}} for recent commit messages",
          "order": 4
        },
        "commitgen.maxDiffLength": {
          "type": "number",
          "default": 120000,
          "description": "Maximum diff length in characters (to prevent token overflow)",
          "order": 5
        }
      }
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "nr build",
    "release": "bumpp",
    "ext:package": "vsce package --no-dependencies",
    "ext:publish": "vsxpub --no-dependencies"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@antfu/ni": "^23.3.1",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.99.0",
    "@vscode/vsce": "^3.7.1",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "ovsx": "^0.10.7",
    "pnpm": "^10.26.0",
    "reactive-vscode": "^0.2.22",
    "taze": "^19.9.2",
    "tsdown": "^0.9.9",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vitest": "^3.2.4",
    "vscode-ext-gen": "^1.5.1",
    "vsxpub": "^0.1.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@vscode/vsce-sign",
      "esbuild",
      "keytar",
      "rolldown"
    ]
  }
}
